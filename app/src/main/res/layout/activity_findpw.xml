<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#A0C4E6">

            <TextView
                android:id="@+id/txt_findPW"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="비밀번호 찾기"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="normal" />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="200dp">
            <TextView
                android:id="@+id/findpw_name"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:layout_marginRight="20dp"
                android:text="이름"
                android:textColor="#5e5e5e"
                android:textSize="15dp"
                android:textStyle="bold">
            </TextView>

            <EditText
                android:id="@+id/inputpw_name"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_toRightOf="@+id/findpw_name"
                android:background="@drawable/style_edittext"
                android:hint ="이름을 입력해주세요"
                android:textColor="#5e5e5e"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/findpw_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/findpw_name"
                android:layout_alignLeft="@+id/findpw_name"
                android:layout_marginBottom="30dp"
                android:text="아이디"
                android:textColor="#5e5e5e"
                android:textSize="15dp"
                android:textStyle="bold">
            </TextView>

            <EditText
                android:id="@+id/inputpw_id"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_toRightOf="@+id/findpw_id"
                android:layout_below="@id/inputpw_name"
                android:layout_alignLeft="@+id/inputpw_name"
                android:background="@drawable/style_edittext"
                android:hint="아이디를 입력해주세요"
                android:textColor="#5e5e5e"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/findpw_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/findpw_id"
                android:layout_alignLeft="@+id/findpw_id"
                android:layout_marginBottom="30dp"
                android:text="e-mail"
                android:textColor="#5e5e5e"
                android:textSize="15dp"
                android:textStyle="bold">
            </TextView>

            <EditText
                android:id="@+id/inputpw_email"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_toRightOf="@+id/findpw_email"
                android:layout_below="@id/inputpw_id"
                android:layout_alignLeft="@+id/inputpw_id"
                android:background="@drawable/style_edittext"
                android:hint="e-mail을 입력해주세요"
                android:textColor="#5e5e5e"
                android:textSize="15sp"
                />

        </RelativeLayout>
        <Button
            android:id="@+id/btn_auth"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:backgroundTint="#A0C4E6"
            android:text="비밀번호 찾기"
            android:textColor="#FFFFFF"></Button>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

